@{
  Layout = "_Layout";
}

@using BakeryMarketing.Models;
@using System.Security.Claims;
@model IEnumerable<BakeryMarketing.Models.Flavor>;

<h1>Flavors:</h1> 

@if (Model.Any())
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
} 
else
{
  <h3>No flavors have been added yet!</h3>
}
@if (User.Identity.IsAuthenticated) // && User.IsInRole("Admin")
{
  <p>@Html.ActionLink("Add new flavor", "Create")</p>
}